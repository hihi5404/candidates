<h1>Candidate List</h1>
 <%= link_to "add candidate",new_candidate_path,class: "btn btn-info" %>
<table class="table table-hover table-condensed ">
  <thead>
    <tr>
      <td></td>
      <td>Name</td>
      <td>Votes</td>
      <td>Age</td>
      <td>politics</td>
      <td>處理</td>
    </tr>
  </thead>
<tbody>
<% @candidates.each do |candidate| %>
  <tr>
     <td><%= link_to "Votes!",vote_candidate_path(candidate),data:{confirm: "Vote this one!?"},class: "btn btn-danger btn-xs",method:"post" %></td>
     <td><%= link_to candidate.display_name %></td>
    <td><%=candidate.logs .count%></td>
    <td><%= candidate.age %></td>
    <td><%=candidate.politics %></td>
    <td>
      <%= link_to "edit", edit_candidate_path(candidate),class: "btn btn-info btn-xs"%>
      <%= link_to "delete", candidate,method: "delete",data:{confirm: 'delete?!'},class: "btn btn-danger btn-xs"%>
    </td>
  </tr>
  <% end %>
</tbody>
</table>






